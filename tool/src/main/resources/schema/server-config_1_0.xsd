<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="urn:jboss:managed:server-config:1.0" xmlns="urn:jboss:managed:server-config:1.0"
           elementFormDefault="qualified" attributeFormDefault="unqualified">

    <xs:element name="server-config" type="server-configType"/>

    <xs:complexType name="server-configType">
        <xs:all>
            <xs:element name="layers" type="layersType" minOccurs="1" maxOccurs="1"/>
        </xs:all>
    </xs:complexType>

    <xs:complexType name="layersType">
        <xs:sequence>
            <xs:element name="layer" type="layerType" minOccurs="1" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="layerType">
        <xs:simpleContent>
            <xs:extension base="xs:string"/>
        </xs:simpleContent>
    </xs:complexType>

</xs:schema>